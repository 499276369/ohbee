package jnix;

import java.io.FileInputStream;
import java.io.FileOutputStream;
import java.io.IOException;
import java.io.InputStream;
import java.io.OutputStream;

public class Test
{
	static
	{
		System.load("/home/djp/projects/ob/android/jnix-native/Debug/libjnix-native.so");
	}
	
	public static void main(String[] args)
	throws Exception
	{
		final Pipe pipe = new Pipe();
		new Thread(new Runnable(){
			public void run()
			{
				System.out.println("Reader started");
				InputStream in = new FileInputStream(pipe.getInputFileDescriptor());
				int c;
				try
				{
					while((c = in.read()) != -1)
						System.out.println(c);
				} 
				catch(IOException e)
				{
					throw new RuntimeException(e);
				}
				System.out.println("Finished");
			}
		}).start();
		
		OutputStream out = new FileOutputStream(pipe.getOutputFileDescriptor());
		int i = 0;
		while(i < 10)
		{
			out.write(i++);
			//System.out.println("Writing");
			Thread.sleep(1000);
		}
		out.close();
		
		System.out.println("In: " + pipe.getInputFileDescriptor().valid());
		System.out.println("Out: " + pipe.getOutputFileDescriptor().valid());
	}
}
